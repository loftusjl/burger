<div class="fullRow yellow">
  <div class="container">
    <h2>Available Burgers</h2>
    <div class="row">
      {{#each burgers}} {{#unless burDevoured}} {{> burgers/burger-block burDevoured=0}} {{/unless}} {{/each}}
    </div>
  </div>
</div>

<div class="fullRow red">
  <div class="container">
    <h2>Devoured!</h2>
    <div class="row">
      {{#each burgers}} {{#if burDevoured}} {{> burgers/burger-block burDevoured=1}} {{/if}} {{/each}}
    </div>
  </div>
</div>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group">
    <label for="photo">Burger Picture:</label><br>
    <input type="text" id="photo" name="burgPhoto">
  </div>

  <button type="submit">Add burger</button>
</form>