
	<div class="col s12 m6 l4">
		<div class="card">
			<div class="card-image">
				<img src="{{burPhoto}}">
				<span class="card-title"><h4 class="outlineText red-text text-lighten-4">{{burName}}</h4></span>
				<a class="delete-burger btn-floating halfway-fab waves-effect waves-light red" data-id="{{this.id}}"><i class="material-icons">delete</i></a>
			</div>
			<div class="card-content">
				<button class="change-burDevoured waves-effect waves-light btn" data-id="{{id}}" data-newburdevoured="{{burDevoured}}">
					{{#if burDevoured}}Make Burger{{else}}Burger Time!{{/if}}
				</button>
			</div>
		</div>
	</div>
